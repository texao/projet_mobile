<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">


    <!-- Titre en haut au milieu -->
    <TextView
        android:id="@+id/textViewTitre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="25dp"
        android:text="Recherchez l’intérim qui vous convient"
        android:textSize="25sp" />

    <!-- Bouton "passer" en haut à droite -->
    <Button
        android:id="@+id/buttonPasser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:text="Passer" />

    <!-- Texte en bas au milieu -->
    <TextView
        android:id="@+id/textViewBas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewTitre"
        android:layout_marginTop="16dp"
        android:text="Gestion des offres et candidatures pour le travail en intérim"
        android:textSize="20sp" />



</RelativeLayout>